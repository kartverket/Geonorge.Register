@model Kartverket.Register.Models.NameSpace
@using Kartverket.Register.Helpers

@{
    ViewBag.Title = Shared.Delete + " " + Model.NameTranslated();
}

@section breadcrumb {
    <li><a href="@Model.GetObjectUrl()">@Model.NameTranslated()</a></li>
    <li>@Shared.Delete</li>
}
<section class="heading">
    <div class="row">
        <div class="col-sm-12">
            <h2>
                @Shared.Delete @Namespace.NamespaceName
            </h2>
        </div>
        <div class="col-sm-12">
            <span class="separator-lg"></span>
        </div>
    </div>
</section>

<h4>@Registers.DeleteConfirm <b>@Model.NameTranslated()</b>?</h4>
<hr />

@using (Html.BeginForm())
{
    <div class="form-actions no-color">
        <input type="submit" value="@Shared.Delete" class="btn btn-default pull-right" />
        <a href="@Model.GetObjectUrl()">@Shared.Back</a>
        <input type="hidden" name="systemId" value="@Model.systemId" />
    </div>
}
