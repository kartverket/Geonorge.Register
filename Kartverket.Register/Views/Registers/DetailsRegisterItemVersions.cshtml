@using Kartverket.Register.Helpers
@using Kartverket.Register.Models.ViewModels
@model VersionsViewModel
﻿@using Kartverket.Register.Helpers

@{
    ViewBag.Title = Model.CurrentVersion.Name;
}

@section breadcrumb {

    @foreach (var register in HtmlHelperExtensions.ParentRegisters(Model.CurrentVersion.Register))
    {
        <li><a href="@register.GetObjectUrl()">@register.name</a></li>
    }
    <li><a href="@Model.CurrentVersion.Register.GetObjectUrl()">@Model.CurrentVersion.Register.NameTranslated()</a></li>
    <li>@Model.CurrentVersion.Name</li>
}

<article>
    <div class="row">
        <div class="col-sm-12">
            <h1 class="small-h1">
                @Model.CurrentVersion.Name
            </h1>
        </div>
        <div class="col-sm-12">
            <span class="separator-lg"></span>
        </div>
        <div class="col-md-12">
            <p>@Model.CurrentVersion.Description</p>
            <p><strong>@Registers.Submitter:</strong> @Model.CurrentVersion.Submitter.NameTranslated()</p>
            <p><strong>@Registers.Owner:</strong> @Model.CurrentVersion.Owner.NameTranslated()</p>
        </div>
    </div>
</article>

<div class="col-sm-12">
    <div class="row">
        <ul class="nav nav-tabs nav-tabs-version">
            <li class="active"><a aria-expanded="false" href="#gjeldende" id="gjeldendeLink" data-toggle="tab">@Registers.Current</a></li>
            <li class="pull-right"><a aria-expanded="false" href="#forslag" id="forslagLink" data-toggle="tab">@Registers.Proposal</a></li>
            <li class="pull-right"><a aria-expanded="false" href="#historiske" id="historiskeLink" data-toggle="tab">@Registers.Historical</a></li>
        </ul>
    </div>

    <div class="row">
        <div class="tab-content">
            <div class="tab-pane active" id="gjeldende">
                @Html.Partial("_currentVersionDocument", (DocumentViewModel)Model.CurrentVersion)
            </div>
            <div class="tab-pane" id="historiske">
                @Html.Partial("_histroicalDocuments", Model.HistoricalVersions)
            </div>
            <div class="tab-pane" id="forslag">
                @Html.Partial("_suggestedDocuments", Model.SuggestedVersions)
            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-sm-12 navbar-bottom">

        <div class="hidden-print">
            @if (Request.IsAuthenticated)
            {
                if (Model.AccessCreateNewVersions)
                {
                    <a class="btn btn-default btn-space pull-right" href="@Model.CreateNewRegisterItemVersionUrl()">@Registers.SuggestNewVersionOf @Model.CurrentVersion.Name</a>
                }

                if (Model.CurrentVersion.AccessRegisterItem)
                {
                    <a href="@Model.CurrentVersion.EditVersionRegisterItemUrl()" class="btn btn-default btn-space pull-right" title="Rediger @Model.CurrentVersion.Name">@Shared.Edit</a>
                    <a href="@Model.CurrentVersion.DeleteVersionRegisterItemUrl()" class="btn btn-default btn-space pull-right" title="Slett @Model.CurrentVersion.Name">@Shared.Delete</a>
                }
            }
            <a href="@Model.CurrentVersion.Register.GetObjectUrl()">@Shared.Back</a>
        </div>
    </div>
</div>
