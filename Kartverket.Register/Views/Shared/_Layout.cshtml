            <script src="https://cdn.jsdelivr.net/npm/@("@kartverket/geonorge-web-components@2.4.0/GeonorgeFooter.js")"></script>
            <script src="https://cdn.jsdelivr.net/npm/@("@kartverket/geonorge-web-components@2.4.0/HeadingText.js")"></script>
            <script src="https://cdn.jsdelivr.net/npm/@("@kartverket/geonorge-web-components@2.4.0/BodyText.js")"></script>
            <script src="https://cdn.jsdelivr.net/npm/@("@kartverket/geonorge-web-components@2.4.0/NavigationTabs.js")"></script>
        </body>
</html>
