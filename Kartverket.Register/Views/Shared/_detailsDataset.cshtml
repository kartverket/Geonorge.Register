                    }
                    else
                    {
                        <div class="col-md-1">@HtmlHelperExtensions.GetDokDeliveryStatusSymbol(Model.DokDeliveryAtomFeedStatusId, null, null, "metadata")<span> @Model.DokDeliveryAtomFeedStatus</span></div>
                        <div class="col-md-11">@Html.DisplayNameFor(model => Model.DokDeliveryAtomFeedStatus) @RawText(Registers.RequirementsAtom)</div>
                    }
                </li>
                <li>
                    <div class="col-md-1"> @HtmlHelperExtensions.GetDokDeliveryStatusSymbol(Model.DokDeliveryDistributionStatusId, null, null, "metadata") <span>@Model.DokDeliveryDistributionStatus</span></div>
