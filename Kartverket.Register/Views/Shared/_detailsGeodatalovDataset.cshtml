@using Kartverket.Register.Helpers
@model Kartverket.Register.Models.ViewModels.GeodatalovDatasetViewModel


@if (!string.IsNullOrEmpty(Model.SpecificUsage))
{
    <article class="col-md-12">
        <h3>@Html.DisplayNameFor(model => Model.SpecificUsage)</h3>
        <p> @Model.SpecificUsage</p>
    </article>
}
<article class="col-md-12">
    <h3>DOK-status</h3>
    <div class="row">
        <div class="col-md-3">@Html.DisplayNameFor(m => m.VersionNumber) </div><div class="col-md-9">@Model.VersionNumber</div>
    </div>

    @if (Model.DokStatus != null)
    {
    <div class="row">
        <div class="col-md-3" title="@Html.Raw(HtmlHelperExtensions.DokStatusBeskrivelse())">DOK-status:</div> <div class="col-md-9">@Model.DokStatus.description <i class="statusIcon-@Model.DokStatusId"></i></div>
    </div>
    }
    <div class="row">
        <div class="col-md-3">@Html.DisplayNameFor(model => Model.DokStatusDateAccepted):</div><div class="col-md-9"> @Html.DisplayFor(modelItem => Model.DokStatusDateAccepted)</div>
    </div>
    <div class="row">
        <div class="col-md-3">@Registers.Updated:</div><div class="col-md-9"> @Html.DisplayFor(model => model.Modified)</div>
    </div>
    <div class="row">
        <div class="col-md-3">@Registers.Submitter:</div><div class="col-md-9"> @Model.Submitter.name</div>
    </div>
    @if (Model.Owner != null)
            {
    <div class="row">
        <div class="col-md-3">@Registers.Owner:</div><div class="col-md-9"> @Model.Owner.name</div>
    </div>
    }
    @if (Model.Theme != null)
            {
    <div class="row">
        <div class="col-md-3">@Html.DisplayNameFor(model => Model.ThemeGroupId):</div><div class="col-md-9"> @Model.Theme.description</div>
    </div>
    }
    <div class="row">
        <div class="col-md-3">@Html.DisplayNameFor(model => Model.InspireTheme):</div><div class="col-md-9"> @Model.InspireTheme</div>
    </div>
    <div class="row">
        <div class="col-md-3">@Html.DisplayNameFor(model => Model.Dok):</div><div class="col-md-9"> @Model.Dok</div>
    </div>
    <div class="row">
        <div class="col-md-3">@Html.DisplayNameFor(model => Model.NationalDataset):</div><div class="col-md-9"> @Model.NationalDataset</div>
    </div>
    <div class="row">
        <div class="col-md-3">@Html.DisplayNameFor(model => Model.Plan):</div><div class="col-md-9"> @Model.Plan</div>
    </div>
    <div class="row">
        <div class="col-md-3">@Html.DisplayNameFor(model => Model.Geodatalov):</div><div class="col-md-9"> @Model.Geodatalov</div>
    </div>
</article>

<article class="col-md-12">
    <h3>Geodatalov status</h3>
    <div class="row">
        <div class="col-md-12"><p><a href="@Html.DokEvaluationCriteriaUrl()" target="_blank">@DataSet.DOK_EvaluationCriteria</a></p></div>
    </div>
    <div class="table-heading col-md-12">
        <div class="col-md-3 col">@DataSet.DOK_AssessmentPoint.ToUpper()</div>
        <div class="col-md-2 col">@DataSet.DOK_StatusValueHeader.ToUpper()</div>
        <div class="col-md-7 col">@DataSet.Comment.ToUpper()</div>
    </div>
    <div class="resultItemRow col-md-12">
        <div class="col-md-3 col">@Html.DisplayNameFor(model => Model.MetadataStatusId)</div>
        <div class="col-md-2 col"> @Html.DisplayFor(model => Model.MetadataStatus.description)</div>
        <div class="col-md-7 col">@Html.DisplayFor(model => Model.MetadataNote)</div>
    </div>
    <div class="resultItemRow col-md-12">
        <div class="col-md-3 col">@Html.DisplayNameFor(model => Model.ProductSpesificationStatusId)</div>
        <div class="col-md-2 col">@Html.DisplayFor(model => Model.ProductSpesificationStatus.description)</div>
        <div class="col-md-7 col">@Html.DisplayFor(model => Model.ProduktspesifikasjonNote)</div>
    </div>
    <div class="resultItemRow col-md-12">
        <div class="col-md-3 col">@Html.DisplayNameFor(model => Model.SosiDataStatusId)</div>
        <div class="col-md-2 col">@Html.DisplayFor(model => Model.SosiDataStatus.description)</div>
        <div class="col-md-7 col">@Html.DisplayFor(model => Model.SosiDataNote)</div>
    </div>
    <div class="resultItemRow col-md-12">
        <div class="col-md-3 col">@Html.DisplayNameFor(model => Model.GmlDataStatusId)</div>
        <div class="col-md-2 col">@Html.DisplayFor(model => Model.GmlDataStatus.description)</div>
        <div class="col-md-7 col">@Html.DisplayFor(model => Model.GmlDataNote)</div>
    </div>
    <div class="resultItemRow col-md-12">
        <div class="col-md-3 col">@Html.DisplayNameFor(model => Model.WmsStatusId)</div>
        <div class="col-md-2 col">@Html.DisplayFor(model => Model.WmsStatus.description)</div>
        <div class="col-md-7 col">@Html.DisplayFor(model => Model.WmsNote)</div>
    </div>
    <div class="resultItemRow col-md-12">
        <div class="col-md-3 col">@Html.DisplayNameFor(model => Model.WfsStatusId)</div>
        <div class="col-md-2 col">@Html.DisplayFor(model => Model.WfsStatus.description)</div>
        <div class="col-md-7 col">@Html.DisplayFor(model => Model.WfsNote)</div>
    </div>
    <div class="resultItemRow col-md-12">
        <div class="col-md-3 col">@Html.DisplayNameFor(model => Model.AtomFeedStatusId)</div>
        <div class="col-md-2 col">@Html.DisplayFor(model => Model.AtomFeedStatus.description)</div>
        <div class="col-md-7 col">@Html.DisplayFor(model => Model.AtomFeedNote)</div>
    </div>
    <div class="resultItemRow col-md-12">
        <div class="col-md-3 col">@Html.DisplayNameFor(model => Model.CommonStatusId)</div>
        <div class="col-md-2 col">@Html.DisplayFor(model => Model.CommonStatus.description)</div>
        <div class="col-md-7 col">@Html.DisplayFor(model => Model.CommonNote)</div>
    </div>
</article>


@if (!string.IsNullOrWhiteSpace(Model.MetadataUrl))
{
    <article class="col-md-12">
        <h3>@DataSet.ProductInformation</h3>
        <p><a href="@Model.MetadataUrl" class="btn btn-fresh-green"><span class="glyphicon glyphicon-globe"></span> @DataSet.DisplayKartkatalogen</a></p>
    </article>
}