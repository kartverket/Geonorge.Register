@using Kartverket.Register.Helpers
@model Kartverket.Register.Models.ViewModels.GeodatalovDatasetViewModel


@if (!string.IsNullOrEmpty(Model.SpecificUsage))
{
    <article class="col-md-12">
        <h3>@Html.DisplayNameFor(model => Model.SpecificUsage)</h3>
        <p> @Model.SpecificUsage</p>
    </article>
}

<article class="col-md-12">
    <p><strong>@Html.DisplayNameFor(model => Model.ThemeGroupId): </strong>@Model.Theme.DescriptionTranslated()</p>
    <p><strong>@Html.DisplayNameFor(model => Model.InspireTheme): </strong>@HtmlHelperExtensions.TranslateBool(Model.InspireTheme)</p>
    <p><strong>@Html.DisplayNameFor(model => Model.Dok): </strong>@HtmlHelperExtensions.TranslateBool(Model.Dok)</p>
    <p><strong>@Html.DisplayNameFor(model => Model.NationalDataset): </strong>@HtmlHelperExtensions.TranslateBool(Model.NationalDataset)</p>
    <p><strong>@Html.DisplayNameFor(model => Model.Plan): </strong>@HtmlHelperExtensions.TranslateBool(Model.Plan)</p>
    <p><strong>@Html.DisplayNameFor(model => Model.Geodatalov): </strong>@HtmlHelperExtensions.TranslateBool(Model.Dok)</p>

</article>

<article class="col-md-12">
    <h3>DOK-status</h3>
    <p title="@Html.Raw(HtmlHelperExtensions.DokStatusBeskrivelse())"><strong>DOK-status: </strong>@Model.DokStatus.DescriptionTranslated() <i class="statusIcon-@Model.DokStatusId"></i></p>
    <p><strong>@Html.DisplayNameFor(model => Model.DokStatusDateAccepted): </strong>@Html.DisplayFor(modelItem => Model.DokStatusDateAccepted)</p>
    <p><strong>@Registers.Updated: </strong>@Html.DisplayFor(model => model.Modified)</p>
</article>

<article class="col-md-12">
    <h3>Geodatalov status</h3>
    <div class="row">
        <div class="col-md-12"><p><a href="@Html.DokEvaluationCriteriaUrl()" target="_blank">@DataSet.DOK_EvaluationCriteria</a></p></div>
    </div>
    <div class="table-heading col-md-12">
        <div class="col-md-3 col">@DataSet.DOK_AssessmentPoint.ToUpper()</div>
        <div class="col-md-2 col">@DataSet.DOK_StatusValueHeader.ToUpper()</div>
        <div class="col-md-7 col">@DataSet.Comment.ToUpper()</div>
    </div>
    <div class="resultItemRow col-md-12">
        <div class="col-md-3 col">@Html.DisplayNameFor(model => Model.MetadataStatusId)</div>
        <div class="col-md-2 col"> @Model.MetadataStatus.DescriptionTranslated()</div>
        <div class="col-md-7 col">@Html.DisplayFor(model => Model.MetadataNote)</div>
    </div>
    <div class="resultItemRow col-md-12">
        <div class="col-md-3 col">@Html.DisplayNameFor(model => Model.ProductSpesificationStatusId)</div>
        <div class="col-md-2 col">@Model.ProductSpesificationStatus.DescriptionTranslated()</div>
        <div class="col-md-7 col">@Html.DisplayFor(model => Model.ProduktspesifikasjonNote)</div>
    </div>
    <div class="resultItemRow col-md-12">
        <div class="col-md-3 col">@Html.DisplayNameFor(model => Model.SosiDataStatusId)</div>
        <div class="col-md-2 col">@Model.SosiDataStatus.DescriptionTranslated()</div>
        <div class="col-md-7 col">@Html.DisplayFor(model => Model.SosiDataNote)</div>
    </div>
    <div class="resultItemRow col-md-12">
        <div class="col-md-3 col">@Html.DisplayNameFor(model => Model.GmlDataStatusId)</div>
        <div class="col-md-2 col">@Model.GmlDataStatus.DescriptionTranslated()</div>
        <div class="col-md-7 col">@Html.DisplayFor(model => Model.GmlDataNote)</div>
    </div>
    <div class="resultItemRow col-md-12">
        <div class="col-md-3 col">@Html.DisplayNameFor(model => Model.WmsStatusId)</div>
        <div class="col-md-2 col">@Model.WmsStatus.DescriptionTranslated()</div>
        <div class="col-md-7 col">@Html.DisplayFor(model => Model.WmsNote)</div>
    </div>
    <div class="resultItemRow col-md-12">
        <div class="col-md-3 col">@Html.DisplayNameFor(model => Model.WfsStatusId)</div>
        <div class="col-md-2 col">@Model.WfsStatus.DescriptionTranslated()</div>
        <div class="col-md-7 col">@Html.DisplayFor(model => Model.WfsNote)</div>
    </div>
    <div class="resultItemRow col-md-12">
        <div class="col-md-3 col">@Html.DisplayNameFor(model => Model.AtomFeedStatusId)</div>
        <div class="col-md-2 col">@Model.AtomFeedStatus.DescriptionTranslated()</div>
        <div class="col-md-7 col">@Html.DisplayFor(model => Model.AtomFeedNote)</div>
    </div>
    <div class="resultItemRow col-md-12">
        <div class="col-md-3 col">@Html.DisplayNameFor(model => Model.CommonStatusId)</div>
        <div class="col-md-2 col">@Model.CommonStatus.DescriptionTranslated()</div>
        <div class="col-md-7 col">@Html.DisplayFor(model => Model.CommonNote)</div>
    </div>
</article>


@if (!string.IsNullOrWhiteSpace(Model.MetadataUrl))
{
    <article class="col-md-12">
        <h3>@DataSet.ProductInformation</h3>
        <p><a href="@Model.MetadataUrl" class="btn btn-fresh-green"><span class="glyphicon glyphicon-globe"></span> @DataSet.DisplayKartkatalogen</a></p>
    </article>
}