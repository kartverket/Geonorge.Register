@using Kartverket.Register.Helpers
@model Kartverket.Register.Models.ViewModels.InspireDataServiceViewModel

<article class="col-md-12">
    <h3>Tjenesten</h3>
    <p><strong>Type: </strong>@Model.InspireDataType</p>
    <p><strong>Tjeneste type: </strong>@Model.ServiceType</p>
    <p><strong>Inspire tema: </strong>@Model.InspireThemsAsString()</p>
    <p><strong>@Html.DisplayNameFor(model => Model.Requests): </strong>@Html.DisplayFor(modelItem => Model.Requests)</p>
    <p><strong>@Html.DisplayNameFor(model => Model.NetworkService): </strong>@HtmlHelperExtensions.TranslateBool(Model.NetworkService)</p>
    <p><strong>@Html.DisplayNameFor(model => Model.Sds): </strong>@HtmlHelperExtensions.TranslateBool(Model.Sds)</p>
    <p>
        <strong>@Html.DisplayNameFor(model => Model.Url): </strong><a href="@Model.Url">
            @Html.DisplayFor(modelItem => Model.Url)<i class="custom-icon-sm custom-icon-eksternlink"></i>
        </a>
    </p>
</article>


<article class="col-md-12">
    <h3>Inspire tjeneste status</h3>
    @*<div class="row">
        <div class="col-md-12"><p><a href="@Html.DokEvaluationCriteriaUrl()" target="_blank">@DataSet.DOK_EvaluationCriteria</a></p></div>
    </div>*@
    <div class="table-heading col-md-12">
        <div class="col-md-3 col">@DataSet.DOK_AssessmentPoint.ToUpper()</div>
        <div class="col-md-2 col">@DataSet.DOK_StatusValueHeader.ToUpper()</div>
        <div class="col-md-7 col">@DataSet.Comment.ToUpper()</div>
    </div>
    <div class="resultItemRow col-md-12">
        <div class="col-md-3 col">@Html.DisplayNameFor(model => Model.InspireDeliveryMetadataId)</div>
        <div class="col-md-2 col"> @Html.DisplayFor(model => Model.MetadataStatus)</div>
        <div class="col-md-7 col">@Html.DisplayFor(model => Model.MetadataNote)</div>
    </div>
    <div class="resultItemRow col-md-12">
        <div class="col-md-3 col">@Html.DisplayNameFor(model => Model.InspireDeliveryMetadataInSearchServiceId)</div>
        <div class="col-md-2 col">@Html.DisplayFor(model => Model.MetadataInSearchServiceStatus)</div>
        <div class="col-md-7 col">@Html.DisplayFor(model => Model.MetadataInSearchServiceNote)</div>
    </div>
    <div class="resultItemRow col-md-12">
        <div class="col-md-3 col">@Html.DisplayNameFor(model => Model.InspireDeliveryServiceStatusId)</div>
        <div class="col-md-2 col">@Html.DisplayFor(model => Model.ServiceStatus)</div>
        <div class="col-md-7 col">@Html.DisplayFor(model => Model.ServiceStatusNote)</div>
    </div>
</article>


@if (!string.IsNullOrWhiteSpace(Model.MetadataUrl))
{
    <article class="col-md-12">
        <h3>@DataSet.ProductInformation</h3>
        <p><a href="@Model.MetadataUrl" class="btn btn-fresh-green"><span class="glyphicon glyphicon-globe"></span> @DataSet.DisplayKartkatalogen</a></p>
    </article>
}