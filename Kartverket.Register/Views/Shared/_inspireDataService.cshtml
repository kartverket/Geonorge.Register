@model PagedList.IPagedList<RegisterItemV2ViewModel>
@using Kartverket.Register.Models.ViewModels
@using Kartverket.Register.Helpers

<div class="table-view">
    <div class="search-results-table-heading row">
        <div class="col-md-3 col-sm-12"><p>@HtmlHelperExtensions.OrderByLink(Request.QueryString["sorting"], Request.QueryString["text"], Shared.Title, "name")</p></div>
        <div class="col-md-2 col-sm-12"><p>@HtmlHelperExtensions.OrderByLink(Request.QueryString["sorting"], Request.QueryString["text"], "Type", "name")</p></div>
        <div class="col-md-2 col-sm-12"><p>@HtmlHelperExtensions.OrderByLink(Request.QueryString["sorting"], Request.QueryString["text"], Registers.Owner, "owner")</p></div>
        <div class="col-md-1 col-sm-12"><p>@HtmlHelperExtensions.OrderByLink(Request.QueryString["sorting"], Request.QueryString["text"], "Request", "inspire_metadata_status")</p></div>
        <div class="col-md-1 col-sm-12"><p>@HtmlHelperExtensions.OrderByLink(Request.QueryString["sorting"], Request.QueryString["text"], "URL", "inspire_metadata_status")</p></div>
        <div class="col-md-1 col-sm-12"><p>@HtmlHelperExtensions.OrderByLink(Request.QueryString["sorting"], Request.QueryString["text"], "Theme", "inspire_metadata_status")</p></div>
        <div class="col-md-2 col-sm-12 status-icons">
            <p style="right: 15px;">
                @HtmlHelperExtensions.OrderByLink(Request.QueryString["sorting"], Request.QueryString["text"], "", "inspire_metadata_status")
                @HtmlHelperExtensions.OrderByLink(Request.QueryString["sorting"], Request.QueryString["text"], "", "inspire_metadata_status")
                @HtmlHelperExtensions.OrderByLink(Request.QueryString["sorting"], Request.QueryString["text"], "", "inspire_metadata_status")
                @HtmlHelperExtensions.OrderByLink(Request.QueryString["sorting"], Request.QueryString["text"], "", "inspire_metadata_status")
                @HtmlHelperExtensions.OrderByLink(Request.QueryString["sorting"], Request.QueryString["text"], "", "inspire_metadata_status")
            </p>
        </div>
        </div>
</div>

<div class="menu-separator search-results-table-heading"></div>

@foreach (InspireDataServiceViewModel item in Model)
{
<div class="resultItemRow">
    <div class="row">
        <div class="col-md-3 col-sm-12"><a href="@item.DetailPageUrl()" class="show-loading-animation" data-loading-message="@Registers.LoadingMessage"> @item.Name </a></div>
        <div class="col-md-2 col-sm-12">@item.ServiceType</div>
        <div class="col-md-2 col-sm-12"><a href="@item.ItemsByOwnerUrl()" title="Datasett eier: @item.Owner.name" class="show-loading-animation" data-loading-message="@Registers.LoadingMessage">@item.Owner.name</a></div>
        <div class="col-md-1 col-sm-12">@item.Requests</div>
        <div class="col-md-1 col-sm-12"><a href="@item.Url"><span class="custom-icon custom-icon-kartmarkoer"></span></a></div>
        <div class="col-md-1 col-sm-12">@item.Theme</div>

        <div class="col-md-2 col-sm-5 status-icons pull-right">
            @HtmlHelperExtensions.Checked(item.Sds, "Sds")
            @HtmlHelperExtensions.Checked(item.NetworkService, "Nettverkstjeneste")
            @HtmlHelperExtensions.GetDokDeliveryStatusSymbol(item.InspireDeliveryMetadata.StatusId, false, "Metadata")
            @HtmlHelperExtensions.GetDokDeliveryStatusSymbol(item.InspireDeliveryMetadataInSearchService.StatusId, false, "Metadata i søketjeneste")
            @HtmlHelperExtensions.GetDokDeliveryStatusSymbol(item.InspireDeliveryMetadataInSearchService.StatusId, false, "Tjenestestatus")
        </div>
    </div>
</div>
}