@using  Kartverket.Register.Helpers

<div class="save-as-menu pull-right">
    <label>@Shared.SaveAs:</label>
    <div class="no-padding-bottom save-as-dropdown">
        <div class="custom-select">
            <select onchange="additionalView(this.value)" class="form-control">
                @*<option value="helpUrl">API</option>*@
                <option value="atomUrl">ATOM</option>
                @if (ViewBag.Title != "Tjenestevarsler")
                {
                    <option value="rssUrl">RSS</option>
                }
                <option value="csvUrl" selected="selected">CSV</option>
                <option value="gmlUrl">GML</option>
                <option value="rdfUrl">RDF</option>
                <option value="jsonUrl">JSON</option>
            </select>
        </div>
    </div>
    <div id="saveButtons" class="no-padding-bottom save-as-buttons">
        <a id="atomUrl" href="@RegisterUrls.urlFormat(Request, "atom")" class="hidden" title="Vis Atom feed(Beta)">@Shared.Save</a>
        <a id="rssUrl" href="@RegisterUrls.urlFormat(Request, "rss")" class="hidden" title="Vis rss feed(Beta)">@Shared.Save</a>
        <a id="csvUrl" href="@RegisterUrls.urlFormat(Request, "csv")" class="btn" title="Vis CSV(Beta)">@Shared.Save</a>
        <a id="gmlUrl" href="@RegisterUrls.urlFormat(Request, "gml")" class="hidden" title="Vis GML Dictionary(Beta)">@Shared.Save</a>
        <a id="rdfUrl" href="@RegisterUrls.urlFormat(Request, "rdf")" class="hidden" title="Vis SKOS/RDF(Beta)">@Shared.Save</a>
        <a id="jsonUrl" href="@RegisterUrls.urlFormat(Request, "json")" class="hidden" title="Vis JSON(Beta)">@Shared.Save</a>
    </div>
</div>