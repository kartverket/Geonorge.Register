@model PagedList.IPagedList<RegisterItem>
@using PagedList.Mvc;
@using Kartverket.Register.Models

@Registers.HitsDisplay @(Model.TotalItemCount == 0 ? 0 : Model.FirstItemOnPage) - @Model.LastItemOnPage @Registers.HitsOf @Model.TotalItemCount @Registers.Hits

@Html.PagedListPager(Model, page => Request.Path + "?page=" + page
+ (!string.IsNullOrEmpty(ViewBag.SortOrder) ? "&sorting=" + ViewBag.SortOrder : "")
+ (Session["text"] != null && !string.IsNullOrEmpty(Session["text"].ToString()) ? "&text=" + Session["text"].ToString() : "")
+ (Session["filterVertikalt"] != null && !string.IsNullOrEmpty(Session["filterVertikalt"].ToString()) ? "&filterVertikalt=" + Session["filterVertikalt"].ToString() : "")
+ (Session["filterHorisontalt"] != null && !string.IsNullOrEmpty(Session["filterHorisontalt"].ToString()) ? "&filterHorisontalt=" + Session["filterHorisontalt"].ToString() : "")
+ (!string.IsNullOrEmpty(Request.QueryString["category"]) ? "&category=" + Request.QueryString["category"].ToString() : "")
+ (Session["municipality"] != null && !string.IsNullOrEmpty(Session["municipality"].ToString()) ? "&municipality=" + Session["municipality"] : ""), new PagedListRenderOptions { MaximumPageNumbersToDisplay = 1, DisplayEllipsesWhenNotShowingAllPageNumbers = false })